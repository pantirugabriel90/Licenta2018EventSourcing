@model IEnumerable<Domain.Views.Entities.TopicListElement>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Topics</h2>
<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary">New Topic</button></a>
</p>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfReplies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastActivity)
            </th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfReplies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastActivity)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
    }
    </tbody>
</table>