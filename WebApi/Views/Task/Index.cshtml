@model IEnumerable<Domain.ContextEntities.TaskListElement>

@{
    ViewBag.Title = "To do list";
    Layout = "_Layout";
    var tasks = Model.ToList();
}

<h2 style="margin-top:25px;">My to do list</h2>
<hr />

<a asp-action="Create"><button type="button" class="btn btn-primary float-right" style="margin-bottom:12px;">New Task</button></a>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th>
                <span style="margin-left:30%">Actions</span>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (User.Identity.Name == item.IssuedBy)
            {
                <tr class="table-secondary">
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @if (item.Completed)
                        {
                            @:&check;
                        }
                        else
                        {
                            @:&cross;
                        }
                    </td>

                    <td>



                        <a asp-action="UpdateTask" asp-route-id="@item.Id"><button type="button" class="btn btn-secondary task-list-button">Update Task</button></a>

                        &emsp;

                        @if (!item.Completed)
                        {
                            <a asp-action="CompleteTask" asp-route-id="@item.Id" asp-route-redirectToTaskList ="true">
                                <button type="button" class="btn btn-success task-list-button">Complete Task</button>
                            </a>
                        }
                        else
                        {
                            <a asp-action="ReopenTask" asp-route-id="@item.Id"  asp-route-redirectToTaskList ="true">
                                <button type="button" class="btn btn-secondary task-list-button">Reopen Task</button>
                            </a>
                        }

                    </td>
                </tr>
            }
        }
    </tbody>
</table>



